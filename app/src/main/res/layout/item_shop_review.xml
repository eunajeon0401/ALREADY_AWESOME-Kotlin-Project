<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:background="#A6A6A6"
        app:layout_constraintEnd_toStartOf="@+id/ratingBarShopReview"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewName"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewName" />

    <TextView
        android:id="@+id/tvShopReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="@string/defaultDate2"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewRegisterId"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewRegisterId" />

    <TextView
        android:id="@+id/tvShopReviewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/defaultMenu"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvShopReviewCategory3"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewCategory3"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewCategory3" />

    <RatingBar
        android:id="@+id/ratingBarShopReview"
        style="@style/ratingBarFalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewName"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/tvShopReviewRegisterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/writer"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvShopReviewCategory2"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewCategory2"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewCategory2" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="19dp"
        android:background="#A6A6A6"
        app:layout_constraintBottom_toBottomOf="@+id/tvShopReviewRegisterId"
        app:layout_constraintEnd_toStartOf="@+id/tvShopReviewDate"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewRegisterId"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewRegisterId" />

    <TextView
        android:id="@+id/tvShopReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvShopReviewCategory4"
        app:layout_constraintTop_toBottomOf="@+id/tvShopReviewCategory4" />

    <TextView
        android:id="@+id/tvShopReviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/defaultShopName"
        app:layout_constraintBottom_toBottomOf="@+id/tvShopReviewCategory1"
        app:layout_constraintStart_toEndOf="@+id/tvShopReviewCategory1"
        app:layout_constraintTop_toTopOf="@+id/tvShopReviewCategory1" />

    <TextView
        android:id="@+id/tvShopReviewCategory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장명/별점 :"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShopReviewCategory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="작성자/날짜 :"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopReviewCategory1"
        app:layout_constraintTop_toBottomOf="@+id/tvShopReviewCategory1" />

    <TextView
        android:id="@+id/tvShopReviewCategory3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="사용 메뉴 :"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopReviewCategory2"
        app:layout_constraintTop_toBottomOf="@+id/tvShopReviewCategory2" />

    <TextView
        android:id="@+id/tvShopReviewCategory4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="리뷰 내용"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvShopReviewCategory3"
        app:layout_constraintTop_toBottomOf="@+id/tvShopReviewCategory3" />

</androidx.constraintlayout.widget.ConstraintLayout>